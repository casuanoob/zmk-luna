
#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, MS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
    timeout-ms = <MS>; \
  };

#define COMBO_TERM_FAST 16
#define COMBO_TERM_NORMAL 20
#define COMBO_TERM_SLOW 40

combos {
  compatible = "zmk,combos";

  COMBO(q, &kp Q, 1 2, BASE, COMBO_TERM_NORMAL)
  COMBO(z, &kp Z, 20 21, BASE, COMBO_TERM_NORMAL)
  COMBO(lshift, &sk LSHIFT, 11 12, BASE NAV SYM NUM, COMBO_TERM_FAST)
  COMBO(rshift, &sk RSHIFT, 11 12, BASE NAV SYM NUM, COMBO_TERM_FAST)
  COMBO(numpad, &mo NUM, 26 27, BASE NAV SYM NUM, COMBO_TERM_SLOW)
  COMBO(backspace, &kp BSPC, 23 24, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(del_word, &kp LC(BSPC), 23 25, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(enter, &kp RET, 9 19, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(escape, &kp ESC, 0 10, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(lbkt, &kp LBKT, 1 11, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(lpar, &kp LPAR, 2 12, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(lbrc, &kp LBRC, 3 13, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(labk, &kp LESS_THAN, 4 14, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(rabk, &kp GREATER_THAN, 5 15, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(rbrc, &kp RBRC, 6 16, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(rpar, &kp RPAR, 7 17, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(rbkt, &kp RBKT, 8 18, BASE NAV SYM NUM, COMBO_TERM_NORMAL)
  COMBO(capslock, &kp CAPS, 1 8, BASE, COMBO_TERM_NORMAL)
  COMBO(capsword, &caps_word, 2 7, BASE, COMBO_TERM_NORMAL)
}; 
